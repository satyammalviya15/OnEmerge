<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnEmerge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

        <style name="startlogin" parent="Theme.OnEmerge">
            <item name="colorPrimary">#3F51B5</item> <!-- Primary branding color -->
            <item name="colorPrimaryDark">#000000
            </item> <!-- Darker variant of primary color, used for status bar -->
            <item name="colorAccent">#FF4081</item> <!-- Accent color used for highlighting -->
        </style>

        <style name="login" parent="Theme.OnEmerge">
            <item name="colorPrimary">#F9F9FB</item> <!-- Primary branding color -->
            <item name="colorPrimaryDark">#00DB0404
            </item> <!-- Darker variant of primary color, used for status bar -->
            <item name="colorAccent">#FAF4F6</item> <!-- Accent color used for highlighting -->
        </style>


    <style name="Theme.OnEmerge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OnEmerge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OnEmerge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>